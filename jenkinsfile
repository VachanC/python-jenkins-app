pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/VachanC/python-jenkins-app.git'
            }
        }

        stage('Setup Python Environment') {
            steps {
                script {
                    def python_installed = sh(script: "command -v python3", returnStatus: true)
                    if (python_installed != 0) {
                        echo 'Python3 not found. Attempting to install...'
                        
                        // Try to install Python3 without breaking the pipeline
                        sh '''
                        apt-get update || echo "Skipping update due to permission issues"
                        apt-get install -y python3 || echo "Skipping installation due to permission issues"
                        '''
                    } else {
                        echo 'Python3 is already installed'
                    }
                }
            }
        }

        stage('Run Python App') {
            steps {
                script {
                    echo 'Running Python application...'
                    sh '''
                    python3 --version
                    python3 app.py || echo "Python script execution failed"
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}
