pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/VachanC/python-jenkins-app.git'
            }
        }

        stage('Setup Python Environment') {
            steps {
                script {
                    def pythonExists = sh(script: "command -v python3 || echo 'not found'", returnStdout: true).trim()
                    if (pythonExists == 'not found') {
                        echo "Python3 not found. Installing..."
                        sh '''
                        apt-get update && apt-get install -y python3 python3-venv
                        '''
                    }
                }
                sh 'python3 -m venv venv'
                sh 'source venv/bin/activate && pip install -r requirements.txt'
            }
        }

        stage('Run Python App') {
            steps {
                sh 'source venv/bin/activate && python app.py'
            }
        }
    }
}
